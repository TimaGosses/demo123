<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2526"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="60dp"> <!-- Отступ сверху для статус-бара -->

        <!-- Заголовок -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заполните свои данные"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:paddingTop="35dp"/>

        <!-- Поле Фамилия -->
        <EditText
            android:id="@+id/editTextFamily"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Фамилия"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0B0B0"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Поле Имя -->
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Имя"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0B0B0"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Поле Отчество -->
        <EditText
            android:id="@+id/editTextOtch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Отчество"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0B0B0"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Поле Паспортные данные -->
        <EditText
            android:id="@+id/editTextPassport"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Паспортные данные"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0B0B0"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Поле Номер ВУ -->
        <EditText
            android:id="@+id/editTextVY"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Номер ВУ"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0B0B0"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp" />
        <!-- Поле Email -->
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0B0B0"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Поле Телефон -->
        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Телефон (+7(XXX)-XXX-XX-XX)"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0B0B0"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Поле Адрес -->
        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:hint="Адрес"
            android:inputType="textPostalAddress"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0B0B0"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Кнопка Внести данные -->
        <Button
            android:id="@+id/buttonGet"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#00C4B4"
            android:text="Внести данные"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Кнопка Добавить автомобиль -->
        <Button
            android:id="@+id/buttonGetC"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#00C4B4"
            android:text="Добавить автомобиль"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="48dp" /> <!-- Дополнительный отступ снизу -->

        <!-- Дополнительное пространство для проверки прокрутки -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>